<div class="container" style="height: 80vh">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
<h2>Se connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :pseudo, required: true, uniqueness: true %>
    <%= f.input :password,:label => 'Mot de passe', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, :label => 'Confirmez votre mot de passe',required: true %>
    <%= f.input :profile_picture,:label => 'Votre photo' %>
    <%= f.input :profile_picture_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Inscription" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
